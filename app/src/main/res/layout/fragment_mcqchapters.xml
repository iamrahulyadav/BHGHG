<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kandara.medicalapp.fragment.MCQFragments.MCQUniversityFragment">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/univIcon"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_chapter"
        tools:ignore="VectorDrawableCompat" />


    <TextView
        android:id="@+id/tvSelectUniversity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/univIcon"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:text="Select Chapters"
        />

    <ListView
        android:id="@+id/chapterList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/cardStandardPadding"
        android:layout_marginBottom="@dimen/cardStandardPadding"
        android:scrollbars="none"
        android:layout_below="@+id/tvSelectUniversity"
        android:divider="@android:color/transparent"
        />

</RelativeLayout>
