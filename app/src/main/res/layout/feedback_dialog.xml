<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:padding="11dp"
            android:textSize="16dp"
            android:background="@color/colorPrimary"
            android:text="What are you reporting?" />

        <RadioGroup
            android:id="@+id/reportType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Factual Error" />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Confusing question" />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Inadequate explanation" />

        </RadioGroup>

        <EditText
            android:id="@+id/feedbackField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:gravity="top|left"
            android:layout_marginLeft="@dimen/cardStandardPadding"
            android:layout_marginRight="@dimen/cardStandardPadding"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorDarkGray"
            android:hint="Enter your feedback"
            android:lines="4" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            android:text="Send"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>