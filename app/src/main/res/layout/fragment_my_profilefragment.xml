<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    tools:context="com.kandara.medicalapp.fragment.MyProfilefragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <com.kandara.medicalapp.View.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_addphoto"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_toolbar"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/cardStandardPadding"
            android:layout_marginRight="@dimen/cardStandardPadding"
            android:layout_marginTop="@dimen/cardStandardPadding"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textStyle="bold"
                android:textColor="@color/colorDarkGray"
                android:layout_margin="6dp"
                />


            <EditText
                android:id="@+id/firstNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_toolbar"
                android:hint="First Name"
                android:padding="6dp"
                android:textColor="@color/colorDarkGray"
                android:textColorHint="@color/colorGray"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_toolbar"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/cardStandardPadding"
            android:layout_marginRight="@dimen/cardStandardPadding"
            android:layout_marginTop="@dimen/cardStandardPadding"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textStyle="bold"
                android:textColor="@color/colorDarkGray"
                android:layout_margin="6dp"
                />


            <EditText
                android:id="@+id/lastNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_toolbar"
                android:hint="Last Name"
                android:padding="6dp"
                android:textColor="@color/colorDarkGray"
                android:textColorHint="@color/colorGray"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_toolbar"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/cardStandardPadding"
            android:layout_marginRight="@dimen/cardStandardPadding"
            android:layout_marginTop="@dimen/cardStandardPadding"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="@color/colorDarkGray"
                android:layout_margin="6dp"
                />


            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_toolbar"
                android:hint="email@email.com"
                android:padding="6dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorDarkGray"
                android:textColorHint="@color/colorGray"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbIsPremium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium"
            />


        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/cardStandardPadding"
            android:layout_marginRight="@dimen/cardStandardPadding"
            android:layout_marginTop="@dimen/cardStandardPadding"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:background="@drawable/bg_study_start"
            />
    </LinearLayout>

</RelativeLayout>
