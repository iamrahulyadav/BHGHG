<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kandara.medicalapp.fragment.RevisionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardStandardPadding"
                android:background="@drawable/bg_toolbar_top">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardStandardPadding"
                    android:layout_marginTop="@dimen/cardStandardPadding"
                    android:textStyle="bold"
                    android:text="Past Question Revision"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="18dp" />





                <TextView
                    android:id="@+id/totalQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="@dimen/cardStandardPadding"
                    android:layout_marginTop="10dp"
                    android:text="Total Questions : 12"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/startBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/totalQuestions"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bg_study_start"
                    android:text="Start"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardStandardPadding"
                android:layout_marginRight="@dimen/cardStandardPadding"
                android:layout_marginBottom="@dimen/cardStandardPadding"
                android:background="@drawable/bg_toolbar_top">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardStandardPadding"
                    android:layout_marginTop="@dimen/cardStandardPadding"
                    android:text="Book Revision"
                    android:textStyle="bold"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="18dp" />




                <TextView
                    android:id="@+id/totalQuestions2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:layout_marginLeft="@dimen/cardStandardPadding"
                    android:layout_marginTop="10dp"
                    android:text="Total Questions : 12"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/startBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/totalQuestions2"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bg_study_start"
                    android:text="Start"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
