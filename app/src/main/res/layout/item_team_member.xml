<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/bg_toolbar_top"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sdsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kandara.medicalapp.View.roundedimageview.RoundedImageView
                android:id="@+id/memberPhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_addphoto"
                app:riv_corner_radius="2dp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/memberPhoto"
                >

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abinash Neupane"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorDarkDarkGray"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="developer"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a@a.com"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>