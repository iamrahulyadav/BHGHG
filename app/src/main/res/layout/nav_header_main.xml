<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <com.kandara.medicalapp.View.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/nav_profile_width"
            android:layout_height="@dimen/nav_profile_width"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abinash Neupane"
            android:textSize="18dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/navHeeaderNameColor"
            tools:text="Abinash Neupane sssssssssssssssssssssss" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navHeeaderEmailColor"
            android:text="abinash@kandaratech.com"
            android:textSize="13dp" />

    </LinearLayout>


</RelativeLayout>
